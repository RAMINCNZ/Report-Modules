<?xml version="1.0" encoding="UTF-8" ?>
<Report>
	<!--Title><var var="I18N::translate('Related families')" /></Title-->
	<Title><var var="I18N::translate('Family individuals')" /></Title>
	<Description><var var="I18N::translate('A report of an individual’s relatives, one per page.')" /></Description>
	<Input name="pid" type="text" default="" lookup="INDI"><var var="I18N::translate('Individual')"/></Input>
	<Input name="relatives" type="select" default="ancestors" options="child-family=>I18N::translate('Parents and siblings')|spouse-family=>I18N::translate('Spouses and children')|direct-ancestors=>I18N::translate('Direct line ancestors')|ancestors=>I18N::translate('Direct line ancestors and their families')|descendants=>I18N::translate('Descendants')|all=>I18N::translate('All')"><var var="I18N::translate('Choose relatives')"/></Input>
	<Input name="maxgen" type="select" default="3" options="1=>I18N::number(1)|2=>I18N::number(2)|3=>I18N::number(3)|4=>I18N::number(4)|5=>I18N::number(5)|6=>I18N::number(6)|7=>I18N::number(7)|8=>I18N::number(8)|9=>I18N::number(9)|10=>I18N::number(10)|-1=>I18N::translate('All')"><var var="I18N::translate('Generations')"/></Input>
	<Input name="sortby" type="select" default="generation" options="generation=>I18N::translate('generation')|BIRT:DATE=>I18N::translate('sort by date of birth')|NAME=>I18N::translate('sort by name')"><var var="I18N::translate('Sort order')"/></Input>
	<Input name="sources" type="checkbox" default="1"><var var="I18N::translate('Show sources')"/></Input>
	<Input name="notes" type="checkbox" default="1"><var var="I18N::translate('Show notes')"/></Input>
	<!--Input name="photos" type="select" default="none" options="none=>I18N::translate('None')|highlighted=>I18N::translate('Highlighted image')"><var var="I18N::translate('Show photos')"/></Input-->
	<Input name="photos" type="checkbox" default="1"><var var="I18N::translate('Show photos')"/></Input>
	<Input name="pageSize" type="select" options="A4=>I18N::translateContext('paper size','A4')|A3=>I18N::translateContext('paper size', 'A3')|US-Letter=>I18N::translateContext('paper size','Letter')|US-Legal=>I18N::translateContext('paper size','Legal')|US-Tabloid=>I18N::translateContext('paper size','Tabloid')"><var var="I18N::translate('Page size')" /></Input>
	<Input name="colors" type="checkbox" default="1"><var var="I18N::translate('Use colors')"/></Input>
	<!--
	<Input name="fonts" type="select" default="dejavusans" options="arialunicid0=>I18N::translateContext('font name', 'Arial')|dejavusans=>I18N::translateContext('font name', 'DejaVu')|helvetica=>I18N::translateContext('font name', 'Helvetica')"><var var="I18N::translate('Font')"/></Input>
	-->
	<SetVar name="fonts" value="dejavusans" />
	<SetVar name="format" value="@format" />
	<if condition="$format=='HTML'">
		<SetVar name="pageSize" value="A3" comment="use more window width"/>
	</if>
	<SetVar name="w_adj" value="0"/>
	<if condition="$pageSize=='A3' or $pageSize=='US-Tabloid'">
		<SetVar name="w_adj" value="230" c="A3 w=841 - A4 w=595 - 2*doc_margin" />
	</if>
	<!-- Header bold,center -->
	<Style name="header" font="$fonts" size="18" style="B"/>
	<!-- Generated by style - required style name by the generator -->
	<Style name="genby" font="$fonts" size="8"/>
	<!-- Links to sources - required style name by the generator -->
	<Style name="footnotenum" font="$fonts" size="6"/>
	<!-- Source text - FootnoteTexts - required style name by the generator -->
	<Style name="footnote" font="$fonts" size="8"/>
	<!-- Section title -->
	<Style name="title" font="$fonts" size="9" style="B"/>
	<!-- Page numbers text -->
	<Style name="pagenum" font="$fonts" size="8"/>
	<!-- Page Header text -->
	<Style name="pageheader" font="$fonts" size="14"/>
	<!-- Standard text -->
	<Style name="btext" font="$fonts" size="8" style="b"/>
	<Style name="text" font="$fonts" size="9"/>
	<!-- Facts text -->
	<Style name="fact" font="$fonts" size="9" style="b"/>
	<!-- Individual names in text boxes -->
	<Style name="name" font="$fonts" size="10"/>
	<!-- Date text -->
	<Style name="date" font="$fonts" size="8"/>
	<SetVar name="ignore" value="CHAN,CHIL,FAMC,HUSB,NAME,OBJE,RESN,SEX,SOUR,TITL,WIFE,_UID,_WT_OBJE_SORT"/>
	<SetVar name="ignore2" value="CHAN,CHIL,FAMC,HUSB,NAME,NOTE,OBJE,RESN,SEX,SOUR,TITL,WIFE,_UID,_XXX,_WT_OBJE_SORT"/>
	<SetVar name="ignore000" value="CHAN,CHIL,FAMC,FAMS,HUSB,NAME,OBJE,RESN,SEX,SOUR,TITL,WIFE,_UID,_WT_OBJE_SORT"/>
	<!-- Setup colors -->
	<!-- Section title background color -->
	<SetVar name="stbgcolor" value="#AAAAAA"/>
	<SetVar name="mbgcolor" value=""/>
	<SetVar name="fbgcolor" value=""/>
	<SetVar name="ugbgcolor" value=""/>
	<SetVar name="fbbgcolor" value=""/>
	<SetVar name="tcolor" value=""/>
	<SetVar name="sectionbox_bgcolor" value=""/>
	<SetVar name="malebox_bgcolor" value=""/>
	<SetVar name="factbox_bgcolor" value=""/>
	<SetVar name="unknowngenderbox_bgcolor" value=""/>
	<!-- Use colors -->
	<if condition="$colors=='on'">
		<!-- Section title background color -->
		<SetVar name="stbgcolor" value="#9CA3D4"/>
		<!-- Male background color -->
		<SetVar name="mbgcolor" value="#D6E0EA"/>
		<!-- Female background color -->
		<SetVar name="fbgcolor" value="#E9DAF1"/>
		<!-- Unknown gender -->
		<SetVar name="ugbgcolor" value="#FFFFFF"/>
		<!-- Fact boxes -->
		<SetVar name="fbbgcolor" value="#D1D9FF"/>
		<!-- Text color - black -->
		<SetVar name="tcolor" value="#000000"/>
		<!-- Section title background color -->
		<SetVar name="sectionbox_bgcolor" value="#9CA3D4"/>
		<!-- Male background color -->
		<SetVar name="malebox_bgcolor" value="#D6E0EA"/>
		<!-- Female background color -->
		<SetVar name="femalebox_bgcolor" value="#E9DAF1"/>
		<!-- Unknown gender -->
		<SetVar name="unknowngenderbox_bgcolor" value="#FFFFFF"/>
		<!-- Fact boxes -->
		<SetVar name="factbox_bgcolor" value="#D1D9FF"/>
		<!-- Text color - black -->
		<SetVar name="tcolor" value="#000000"/>
	</if>
	<!-- New Page controller -->
	<SetVar name="newpage" value="0"/>
	<!-- New Page for Sources controller if SOUR exist -->
	<SetVar name="source_exist" value="0"/>
	<!-- set the default widths -->
	<SetVar name="dwidth" value="200+$w_adj/2"/>
	<SetVar name="pwidth" value="436+$w_adj"/>
	<SetVar name="srcwidth" value="373" />
	<SetVar name="srcleft" value="60" />
	<!-- space height -->
	<SetVar name="sheight" value="15"/>
	<SetVar name="width" value="433+$w_adj"/>
	<SetVar name="width1" value="418+$w_adj"/>
	<SetVar name="width2" value="233+$w_adj/2"/>
	<!-- change the widths for no pictures -->
	<if condition="$photos!='on'">
		<SetVar name="width" value="0"/>
		<SetVar name="width1" value="0"/>
		<SetVar name="width2" value="0"/>
		<SetVar name="srcwidth" value="0" />
	</if>
	<if condition="$relatives=='child-family'"><SetVar name="explain" value="I18N::translate('Parents and siblings')"/></if>
	<if condition="$relatives=='spouse-family'"><SetVar name="explain" value="I18N::translate('Spouses and children')"/></if>
	<if condition="$relatives=='direct-ancestors'"><SetVar name="explain" value="I18N::translate('Direct line ancestors')"/></if>
	<if condition="$relatives=='ancestors'"><SetVar name="explain" value="I18N::translate('Direct line ancestors and their families')"/></if>
	<if condition="$relatives=='descendants'"><SetVar name="explain" value="I18N::translate('Descendants')"/></if>
	<if condition="$relatives=='all'"><SetVar name="explain" value="I18N::translate('All')"/></if>
	<if condition="$sortby=='generation'"> <!-- reportParserGenerate cannot sort by generation these cases -->
		<if condition="$relatives=='child-family'"><SetVar name="sortby" value="BIRT:DATE"/></if>
		<if condition="$relatives=='spouse-family'"><SetVar name="sortby" value="BIRT:DATE"/></if>
		<if condition="$relatives=='all'"><SetVar name="sortby" value="BIRT:DATE"/></if>
	</if>
	<setvar name="dump" value="dval" />
	<setvar name="dval" value="25" comment="don't show all the first 25 variables" />
	<GedCom id="$pid"><SetVar name="startname" value="@NAME" trim="/" /></GedCom>
	<SetVar name="startname" value="$startname" trim="*" />
	<SetVar name="Family_individuals" value="$startname: $explain" />
	<SetVar name="title" value="$startname: $explain" />
	<SetVar name="mdash" value=" %26emsp; %26mdash; %26emsp; " />
	<SetVar name="format" value="@format" />
	<SetVar name="namesep" value="I18N::translate('née')"/>
	<Doc pageSize="$pageSize" rightmargin="50" headermargin="15" bottommargin="50" footermargin="0" >
		<Header>
			<TextBox pos="abs" top="." newline="1">
				<Text style="header"><GetPersonName id="$pid" />: <var var="$explain"/></Text>
			</TextBox>
			<!--Cell align="center" newline="1" style="header"><GetPersonName id="$pid" />: <var var="$explain"/></Cell-->
			<!--Cell align="rightrtl" newline="1" style="pagenum"><var var="I18N::translate('Page')"/> <PageNum/> / <TotalPages/></Cell-->
		</Header>
		<Body>
			<!-- set the gedcom context for this individual -->
			<Relatives id="$pid" group="$relatives" maxgen="$maxgen" sortby="$sortby">
				<if condition="$newpage==1">
					<if condition="$format=='PDF'">
						<NewPage/>
					</if>
					<if condition="$format=='HTML'">
						<TextBox pos="abs" top="." newline="1" >
							<Text style="text"><br/><sp/> </Text>
						</TextBox>
						<Line />
						<TextBox pos="abs" top="." newline="1" >
							<Text style="text"><br/><sp/> </Text>
						</TextBox>
					</if>
				</if>
				<SetVar name="newpage" value="1"/>
				<SetVar name="sex" value="@SEX"/>
				<SetVar name="mid" value="@ID"/>
				<SetVar name="generation" value="@generation"/>
				<!-- Individual name -->
				<TextBox pos="abs" top="." newline="1">
					<Text style="pageheader"><GetPersonName id="" select="combined" fam_relation="1" name_sep="$namesep"/></Text>
					<!-- level 1 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
					<!-- level 2 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="NAME:SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
					<Text style="text"><br /> </Text>
				</TextBox>
				<!-- show the persons images -->
				<if condition="$photos=='all'">
					<!-- This is an image not a text, so don''t use text padding
					Reset also the last height after all the images has been printed
					set pagecheck to 0, the image function check is too
					and "trick" the X-position back to the margin with a newline -->
					<TextBox pos="abs" top="." left="$pwidth" newline="1" pagecheck="0" padding="0" reseth="1" width="80">
						<RepeatTag tag="OBJE">
							<Image file="@FILE" width="80" ln="N"/>
						</RepeatTag>
					</TextBox>
				</if>
				<!-- show the person''s Highlighted Image -->
				<if condition="$photos=='on'">
					<TextBox pos="abs" top="." left="$pwidth" newline="1" pagecheck="0" padding="0" reseth="1" width="80">
						<HighlightedImage width="80"/>
					</TextBox>
				</if>
				<!-- Print the individuals facts -->
				<TextBox pos="abs" top="." bgcolor="$stbgcolor" left="0" border="1" newline="1" width="$width">
					<Text style="title" color="$tcolor"><var var="I18N::translate('Facts and events')"/></Text>
				</TextBox>
				<Facts ignore="$ignore2" families="1">
					<if condition="@fact=='FAMS'">
					<Gedcom id="@FAMS">
							<SetVar name="marrtype" value="??"/>
							<SetVar name="marrdate" value="_XXX"/>
							<if condition="@EVEN:DATE!=''"><SetVar name="marrtype" value="Common law marriage"/><SetVar name="marrdate" value="EVEN:DATE"/></if> <!-- Common Law Partner, handled as EVEN:TYPE -->
							<if condition="@ENGA:DATE!=''"><SetVar name="marrtype" value="Engagement"/><SetVar name="marrdate" value="ENGA:DATE"/></if>
							<if condition="@MARR:DATE!=''"><SetVar name="marrtype" value="Marriage"/><SetVar name="marrdate" value="MARR:DATE"/></if>
							<if condition="@MARR=='Y'"><SetVar name="marrtype" value="Marriage"/><SetVar name="marrdate" value="MARR:DATE"/></if>
							<TextBox pos="abs" top="." bgcolor="$factbox_bgcolor" border="1" width="$dwidth" newline="0">
								<Text color="$tcolor" style="fact"><var var="I18N::translate($marrtype)" /> </Text>
								<Text color="$tcolor" style="text"><GedcomValue tag="$marrdate" /> </Text>
					<if condition="$sources=='on'">
						<RepeatTag tag="MARR:SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
							</TextBox>
							<TextBox pos="abs" top="." bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1">
								<if condition="$sex=='M'">
									<SetVar name="spid" value="@WIFE"/>
								</if>
								<if condition="$sex=='F'">
									<SetVar name="spid" value="@HUSB"/>
								</if>
								<Gedcom id="$spid">
									<Text color="$tcolor" style="text"><GetPersonName id=""/></Text>
								</Gedcom>
								<if condition="@MARR:PLAC!=''">
									<Text color="$tcolor" style="text">, <GedcomValue tag="MARR:PLAC" /></Text>
								</if>
							</TextBox>
					</Gedcom>
					</if>
					<if condition="@fact!='FAMS' and @fact!='_XXX'">
					<TextBox pos="abs" top="." bgcolor="$fbbgcolor" border="1" width="$dwidth" newline="0">
						<if condition="@fact=='_SP_DEAT'">
							<Text color="$tcolor" style="fact"><var var="I18N::translate('Death of spouse')"/> </Text>
						</if>
						<if condition="@fact!='_SP_DEAT'">
							<Text color="$tcolor" style="fact"><var var="@fact"/> </Text>
						</if>
						<Text color="$tcolor" style="text"><GedcomValue tag="@fact:DATE"/> </Text>
						<!-- look for fact level 2 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="@fact:SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
					</TextBox>
					<!-- print a different layout for facts with descriptions -->
					<if condition="@desc!='' or @fact=='xxDEAT' or @fact=='xxRESI'">
					<TextBox pos="abs" top="." bgcolor="$fbbgcolor" border="1" width="$width2" newline="1" >
							<if condition="@desc=='Y'">
								<Text color="$tcolor" style="text"><var var="I18N::translate('yes')" /> <GedcomValue tag="@fact:PLAC"/> </Text>
							</if>
							<if condition="@desc=='N'">
								<Text color="$tcolor" style="text"><var var="I18N::translate('no')" /> <GedcomValue tag="@fact:PLAC"/> </Text>
							</if>
							<if condition="@fact=='OCCU'">
								<Text color="$tcolor" style="text"><GedcomValue tag="@desc"/></Text>
								<if condition="@AGNC!=''">
								<Text color="$tcolor" style="text">, <GedcomValue tag="@fact:AGNC"/></Text>
								</if>
								<if condition="@PLAC!='' or @ADDR!=''">
									<Text color="$tcolor" style="text">: </Text>
								</if>
								<if condition="@ADDR!=''">
									<Text color="$tcolor" style="text"><GedcomValue tag="@fact:ADDR"/>, </Text>
								</if>
								<if condition="@PLAC!=''">
									<Text color="$tcolor" style="text"><GedcomValue tag="@fact:PLAC"/></Text>
								</if>
							</if>
							<if condition="@fact!='OCCU' and @fact!='DEAT' and @fact!='ASSO' and @desc!='Y' and @desc!='N' and @PLAC!=''">
								<Text color="$tcolor" style="text"><GedcomValue tag="@desc"/>; <GedcomValue tag="@fact:PLAC"/></Text>
							</if>
					</TextBox>
					</if>
					<!-- facts without descriptions -->
					<if condition="@desc==''">
					<TextBox bgcolor="$factbox_bgcolor" border="1" width="$width2" newline="1" pos="abs" top=".">
						<if condition="@ADDR!=''">
							<Text color="$tcolor" style="text"><GedcomValue tag="@fact:ADDR" />, </Text>
						</if>
						<if condition="@PLAC!=''">
							<Text color="$tcolor" style="text"><GedcomValue tag="@fact:PLAC" /> </Text>
						</if>
						<if condition="@CAUS!=''">
							<if condition="@PLAC!=''">
								<Text color="$tcolor" style="fact"> <var var="I18N::translate('Cause')" />: </Text>
							</if>
							<Text color="$tcolor" style="text"><GedcomValue tag="@fact:CAUS"/> </Text>
						</if>
						<if condition="@TEMP!=''">
							<Text color="$tcolor" style="text"><GedcomValue tag="@fact:TEMP" /></Text>
						</if>
					</TextBox>
					</if>
					<RepeatTag tag="@fact:SOUR">
						<if condition="@DATA:TEXT!=''">
						<if condition="@PAGE!=''">
							<TextBox bgcolor="$factbox_bgcolor" border="1" left="$srcleft" width="$srcwidth" newline="1" pos="abs" top=".">
							<Text color="$tcolor" style="btext"><GedcomValue tag="SOUR:PAGE" nline="1"/>: </Text>
							</TextBox>
						</if>
						<TextBox bgcolor="$factbox_bgcolor" border="1" left="$srcleft" width="$srcwidth" newline="1" pos="abs" top=".">
							<Text color="$tcolor" style="text"><GedcomValue tag="SOUR:DATA:TEXT" /></Text>
						</TextBox>
						</if>
					</RepeatTag>
					<if condition="@NOTE!=''">
						<TextBox bgcolor="$factbox_bgcolor" border="1" left="$srcleft" width="$srcwidth" newline="1" pos="abs" top=".">
						<Text color="$tcolor" style="btext"><var var="I18N::translate('Note')" />: </Text>
						</TextBox>
						<TextBox bgcolor="$factbox_bgcolor" border="1" left="$srcleft" width="$srcwidth" newline="1" pos="abs" top=".">
						<Text color="$tcolor" style="text" newline="1"><GedcomValue tag="@fact:NOTE" /></Text>
						</TextBox>
					</if>
					</if>
				</Facts>
				<!-- print any level 1 notes, but only if exist -->
				<if condition="$notes=='on'">
					<TextBox pos="abs" top="." height="$sheight" newline="1" padding="0" width="15"/>
					<setvar name="nh" value="1" />
					<RepeatTag tag="NOTE">
						<if condition="$nh==1">
							<TextBox pos="abs" top="." bgcolor="$stbgcolor" border="1" newline="1" width="$width"><Text style="title" color="$tcolor"><var var="I18N::translate('Notes')"/></Text></TextBox>
							<setvar name="nh" value="0" />
						</if>
						<TextBox pos="abs" top="." bgcolor="$fbbgcolor" border="1" newline="1" width="$width"><Text style="text" color="$tcolor"><GedcomValue tag="NOTE"/></Text></TextBox>
					</RepeatTag>
				</if>
				<!-- print family with parents and siblings -->
				<TextBox pos="abs" top="." height="$sheight" newline="1" padding="0" width="15"/>
				<TextBox pos="abs" top="." bgcolor="$stbgcolor" border="1" newline="1" width="$width"><Text style="title" color="$tcolor"><var var="I18N::translate('Family with parents')"/></Text></TextBox>
				<RepeatTag tag="FAMC">
					<Gedcom id="@FAMC">
						<!-- father -->
						<Gedcom id="@HUSB">
							<TextBox pos="abs" top="." bgcolor="$mbgcolor" border="1" newline="1" width="$width">
								<Text color="$tcolor" style="text"><var var="I18N::translate('Father')"/> </Text>
								<Text color="$tcolor" style="name"><GetPersonName id=""/></Text>
								<!-- level 1 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
								<!-- level 2 sources -->
					<if condition="$sources=='on'">
						<RepeatTag tag="NAME:SOUR" >
							<Footnote>
								<Gedcom id="@SOUR">
									<if condition="@AUTH!=''"><GedcomValue tag="AUTH" />, </if>
									«<GedcomValue tag="TITL" />»
									<if condition="@PUBL!=''"> (<GedcomValue tag="PUBL" />)</if>
								</Gedcom>
								<if condition="@PAGE!=''">: <GedcomValue tag="SOUR:PAGE" /></if>
								<if condition="@DATA:TEXT!=''"><br /><GedcomValue tag="SOUR:DATA:TEXT" /></if>
							</Footnote>
							<SetVar name="source_exist" value="1" />
						</RepeatTag>
					</if>
								<Text color="$tcolor" style="text"> (<var var="I18N::translate('Birth')"/>: <GedcomValue tag="BIRT:DATE"/> <GedcomValue tag="BIRT:PLAC"/><Gedcom id="DEAT"> - <var var="I18N::translate('Death')"/>: <GedcomValue tag="DEAT:DATE"/> <GedcomValue tag="DEAT:PLAC"/></Gedcom>)</Text>
							</TextBox>
						</Gedcom>
						<!-- mother -->
						<Gedcom id="@WIFE">
							<TextBox pos="abs" top="." bgcolor="$fbgcolor" border="1" newline="1" width="$width">
